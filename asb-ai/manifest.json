{
    "manifest_version": 2,
    "name": "Bookmark Sorter",
    "version": "1.0",
    "description": "Automatically sorts bookmarks alphabetically",
    "permissions": [
        "bookmarks"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icon.svg",
        "default_title": "Sort Bookmarks"
    }
}